<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srf_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.7"
        app:srlEnablePreviewInEditMode="false"
        app:srlHeaderHeight="55dp"
        app:srlHeaderMaxDragRate="2.35">

        <com.example.hasee.news.weight.NewsHeader
            android:id="@+id/nh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner_news"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@color/antiquewhite" />

            <com.example.hasee.common.weight.banner.BannerView
                android:id="@+id/bv_best"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>

