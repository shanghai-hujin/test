<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fitsSystemWindows="false"
       >

    </android.support.design.widget.AppBarLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srf_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.7"
        app:srlEnablePreviewInEditMode="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlHeaderHeight="55dp"
        app:srlHeaderMaxDragRate="2.35">

        <com.example.hasee.news.weight.NewsHeader
            android:id="@+id/nh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_news"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.scwang.smartrefresh.layout.footer.BallPulseFooter
            android:id="@+id/rv_news_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_new_top"
        android:layout_gravity="end|bottom"
        android:src="@drawable/icon_guazi_up"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/fabbg"
        app:borderWidth="0dp"
        app:rippleColor="#0097a7"
        android:scaleType="fitXY"
        app:layout_behavior="@string/scale_down_show_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.design.widget.CoordinatorLayout>

